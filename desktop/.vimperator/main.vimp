" AwesomeBar + search engines
set complete=ls
set wildoptions=auto

" :autocmd LocationChange .* :js modes.passAllKeys = /mail\.google\.com|www\.google\.com\/reader\/view/.test(buffer.URL)

set ignorecase
set smartcase

" prevent the page from focusing an element
set focuscontent

" add French next/prevpatterns
set nextpattern+=^\s*suivant\s*$
set previouspattern+=^\s*pr(é|e)c(é|e)d(a|e)nt\s*$

set showmode
set showstatuslinks=2

" switch css use or not
map ! :set invum<CR>
